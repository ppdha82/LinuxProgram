# run following command for using trello
sudo apt install libgconf2-4 -y
unzip Trello-llinux-0.1.9.zip -d /home/ppdha82/Downloads/trello

echo "
[Desktop Entry]
Name=Trello
Exec=/home/ppdha82/Downloads/trello/Trello
Terminal=false
Type=Application
Icon=/home/ppdha82/Downloads/trello/Trello/resources/app/static/Icon.png
" > /home/ppdha82/.local/share/applications/trello.desktop
